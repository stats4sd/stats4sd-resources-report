{
  "root": true,
  "env": {
    "node": true
  },
  "extends": [
    "plugin:vue/recommended",
    "eslint:recommended",
    "prettier/vue",
    "plugin:prettier/recommended"
  ],

  "plugins": ["prettier"],

  "rules": {
    "prettier/prettier": "warn",
    "no-console": "off",
    "no-unused-vars": "warn",
    "vue/no-use-v-if-with-v-for": "off"
  },
  "parserOptions": {
    "sourceType": "module",
    "parser": "babel-eslint"
  }
}
